reviewer:
  - name: CodeRabbit
    model: gpt-4
    style: concise
    tone: professional
    comment_mode: inline
    summary: true
    language: en

rules:
  - enforce-type-annotations
  - no-debug-statements
  - no-console-log
  - enforce-error-handling
  - no-hardcoded-secrets
  - prefer-env-variables
  - limit-function-length: 50
  - limit-file-length: 500

exclude_paths:
  - dist/
  - node_modules/
  - *.test.ts
  - *.spec.ts

settings:
  auto_review_on_pr: true
